{
    "name": "Reader Mode",
    "description": "Present articles in less distractive ways.",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "19": "icons/icon19.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon128.png"
    },
    "permissions": [
        "<all_urls>",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "reader.html",
        "reader.js",
        "reader.css",
        "reset.css"
    ]
}