{
    "name": "Pretty Quote",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Turn text into a pretty image so you can share it beautifully and easily",
    "icons": {
        "16": "icons/icon16.png",
        "19": "icons/icon19.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}